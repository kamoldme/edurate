# EduRate Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (REQUIRED - Generate a random 64-character string)
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (Optional - defaults to local SQLite)
# For production, you might want to use PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/edurate

# Session Secret (Optional - for session-based auth)
SESSION_SECRET=your-session-secret-change-this

# Email Configuration (REQUIRED - for registration verification)
# Uses Gmail SMTP. Create an App Password at: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# Application URL (For email links, etc.)
APP_URL=http://localhost:3000

# Rate Limiting (Optional - defaults to 200 requests per 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=200

# Security (Optional)
# BCRYPT_ROUNDS=12
# COOKIE_SECURE=true  # Set to true in production with HTTPS
